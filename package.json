{
  "name": "firecrawl-lite",
  "version": "1.0.0",
  "description": "A lightweight, efficient web scraper that does one thing well",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:frontend": "node public/tests/preview-mode.test.js",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "keywords": [
    "scraper",
    "crawler",
    "markdown",
    "html"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.1",
    "@types/turndown": "^5.0.5",
    "@vitest/ui": "^4.0.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm test"
    ]
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "joplin-turndown-plugin-gfm": "^1.0.12",
    "puppeteer": "^23.11.1",
    "turndown": "^7.1.3",
    "undici": "^7.10.0",
    "zod": "^3.24.2"
  }
}