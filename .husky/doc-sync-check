#!/bin/sh
# AI-Assisted Workflow: Verify AI output, don't remind known tasks

# API changed but docs not updated → AI might have missed it
if git diff --cached --name-only | grep -q "src/server.ts"; then
  if ! git diff --cached --name-only | grep -q "README.md"; then
    echo "⚠️  src/server.ts changed but README.md not staged (AI miss?)"
  fi
fi

# New env var but example not updated → AI might have missed it
if git diff --cached | grep -q "process.env\\."; then
  if ! git diff --cached --name-only | grep -q ".env.example"; then
    echo "⚠️  New env var detected but .env.example not staged (AI miss?)"
  fi
fi
