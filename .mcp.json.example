{
  "mcpServers": {
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "description": "Chrome DevTools MCP - 用于浏览器自动化和调试"
    },
    "context7": {
      "type": "sse",
      "url": "https://mcp-api.tencent-cloud.com/sse/YOUR_SSE_ID",
      "description": "Context7 腾讯云 MCP 服务"
    },
    "figma": {
      "command": "npx",
      "args": ["@thirdstrandstudio/mcp-figma", "--figma-token", "YOUR_FIGMA_TOKEN"]
    }
  }
}
